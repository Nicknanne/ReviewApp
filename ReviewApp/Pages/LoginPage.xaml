<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReviewApp.LoginPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             Title="LoginPage">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
        <Label Text="Auth" FontSize="24" WidthRequest="200" HorizontalTextAlignment="Center"></Label>
        <Entry Text="{Binding Email}" Placeholder="Username" WidthRequest="300"></Entry>
        <Entry Text="{Binding Password}" Placeholder="Password" WidthRequest="300" IsPassword="False"></Entry>
        <Button Text="Register" FontSize="18" Command="{Binding RegisterCommand}" WidthRequest="150"></Button>
        <Button Text="Login" FontSize="18" Command="{Binding LoginCommand}" WidthRequest="150"></Button>
    </VerticalStackLayout>
</ContentPage>
    
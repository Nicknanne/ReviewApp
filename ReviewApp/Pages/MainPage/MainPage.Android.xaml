<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ReviewApp.ViewModels"
             x:Class="ReviewApp.Pages.MainPageAndroid"
             Title="MainPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="True">
             
    <Grid RowDefinitions="Auto, *, Auto" RowSpacing="10">
        <SearchBar Placeholder="Its Android" Grid.Row="0"></SearchBar>
        <CollectionView ItemsSource="{Binding Reviews}" Grid.Row="1">
            <CollectionView.ItemsLayout>
                <GridItemsLayout HorizontalItemSpacing="10" VerticalItemSpacing="10" Orientation="Vertical"></GridItemsLayout>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:ReviewItemViewModel">
                    <Border BackgroundColor="#FF383838"
                        WidthRequest="400"
                        HeightRequest="130"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="1"
                        StrokeLineJoin="Round">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="160"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding GameTitle}"
                                Padding="10,6"
                                FontSize="24"
                                Grid.Row="0"
                                Grid.Column="0"></Label>
                            <Button Text="View"
                                Margin="0,0,10,0"
                                Padding="0"
                                HorizontalOptions="End"
                                Grid.Row="0"
                                Grid.Column="2"
                                WidthRequest="80"
                                HeightRequest="30"
                                Command="{Binding OpenReviewDetailsPopapCommand}"></Button>

                            <ScrollView
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                VerticalScrollBarVisibility="Never">
                                <Label Text="{Binding Comment}"
                                    Padding="10,6"
                                    FontSize="14"></Label>
                            </ScrollView>
                            <Label Text="{Binding Rating}"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"
                                FontSize="18"
                                Grid.Row="1"
                                Grid.Column="2"></Label>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <HorizontalStackLayout HeightRequest="70" Spacing="20" HorizontalOptions="Center" Grid.Row="2">
            <Button WidthRequest="40" HeightRequest="40" VerticalOptions="Center" Command="{Binding PreviousPageCommand}"></Button>
            <Label Text="{Binding PageLabel}" VerticalOptions="Center" FontSize="24"></Label>
            <Button WidthRequest="40" HeightRequest="40" VerticalOptions="Center" Command="{Binding NextPageCommand}"></Button>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ReviewApp.AppShellAndroid"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ReviewApp"
    xmlns:pages="clr-namespace:ReviewApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="ReviewApp">
   <TabBar>
        <ShellContent Title="Меню" Icon="dotnet_bot.png" ContentTemplate="{DataTemplate pages:MainPageAndroid}" />
        <ShellContent Title="Все рецензии" Icon="dotnet_bot.png" ContentTemplate="{DataTemplate local:AllPublicReviewsPageAndroid}" />
        <ShellContent Title="Создать рецензию" Icon="dotnet_bot.png" ContentTemplate="{DataTemplate local:AddReviewPage}" />
    </TabBar>
</Shell>
